
    <%- include('../partials/head')%>

</head>
<body class="min-h-screen bg-gray-50">
    <%- include('../partials/nav') %>
    <main class="container mx-auto px-4 py-8">
        <div class="max-w-xl max-h-full mx-auto">
            <div class="bg-white rounded-lg shadow-2xl p-8">
                <h1 class="text-2xl font-semibold text-center text-gray-800 mb-8">Login</h1>
                <form action="/login" method="POST" class="space-y-4">
                    <% if (errors && errors.length > 0) { %>
                        <ul>
                        <% errors.forEach(function(err){ %>
                            <li style="color: red;"><%=err%></li>
                        <% }); %>
                        </ul>
                    <% } %>
                    <div>
                        <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email</label>
                        <input type="email" id="email" name="email" required
                               class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-red-400 focus:border-red-400 transition-colors"
                               placeholder="Enter your email"
                               />
                    </div>
                    <div>
                        <label for="password" class="block text-sm font-medium text-gray-700 mb-2">Password</label>
                        <input type="password" id="password" name="password" required
                               class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-red-400 focus:border-red-400 transition-colors"
                               placeholder="Enter your password"/>
                    </div>
                    <div>
                        <input type="submit" value="Login"
                               class="w-full bg-red-400 text-white py-2 rounded-md hover:bg-red-500 transition-colors"/>
                    </div>


                   
                    <div>
                        <p class="text-center text-gray-600">Don't have an account? <a href="/signup" class="text-red-400 hover:underline">Register</a></p>
                    </div>
