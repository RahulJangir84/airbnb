<%- include('../partials/head') %>
         
</head>

<body class="min-h-screen bg-gray-50">
    <%- include('../partials/nav') %>

    <main class="container mx-auto px-4 py-8">
        <div class="max-w-xl max-h-full mx-auto">
            <div class="bg-white rounded-lg shadow-2xl p-8">
                <h1 class="text-2xl font-semibold text-center text-gray-800 mb-8">Signup</h1>
                <form action="/signup" method="POST" class="space-y-4">
                    
                    <% if(typeof errors !== 'undefined' && errors && errors.length>0){%>
                        <div class="bg-red-50 border-l-4 border-red-500 rounded-lg p-4 mb-6 shadow-sm animate-pulse">
                            <div class="flex items-start">
                                <div class="flex-shrink-0">
                                    <svg class="h-5 w-5 text-red-500 mt-0.5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
                                    </svg>
                                </div>
                                <div class="ml-3 flex-1">
                                    <h3 class="text-sm font-semibold text-red-800 mb-2">
                                        <% if(errors.length === 1) { %>
                                            Please fix the following issue:
                                        <% } else { %>
                                            Please fix the following issues:
                                        <% } %>
                                    </h3>
                                    <ul class="text-sm text-red-700 space-y-1">
                                        <% errors.forEach((err, index)=>{ %>
                                            <li class="flex items-start">
                                                <span class="inline-block w-1.5 h-1.5 bg-red-500 rounded-full mt-2 mr-2 flex-shrink-0"></span>
                                                <span><%=err%></span>
                                            </li>
                                        <% }) %>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    <% } %>
                    <div>

                        <label for="firstname" class="block text-sm font-medium text-gray-700 mb-2">
                            First Name
                        </label>
                        <input type="text" id="firstname" name="firstname" required value="<%=oldInput.firstname ? oldInput.firstname : '' %>"
                                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-red-400 focus:border-red-400 transition-colors"
                                placeholder="Enter your first name" />
                    </div>

                    <div>
                        <label for="lastname" class="block text-sm font-medium text-gray-700 mb-2">
                            Last Name
                        </label>
                        <input type="text" id="lastname" name="lastname" required value="<%=oldInput.lastname ? oldInput.lastname : '' %>"
                                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-red-400 focus:border-red-400 transition-colors"
                                placeholder="Enter your last name" />
                    </div>

                    <div>
                        <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                            Email
                        </label>
                        <input type="email" id="email" name="email" required value="<%=oldInput.email ? oldInput.email : '' %>"
                                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-red-400 focus:border-red-400 transition-colors"
                                placeholder="Enter your email" />
                    </div>

                    <div>
                        <label for="password" class="block text-sm font-medium text-gray-700 mb-2">
                            Password
                        </label>
                        <input type="password" id="password" name="password" required 
                                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-red-400 focus:border-red-400 transition-colors"
                                placeholder="Enter your password" />
                    </div>

                    <div>
                        <label for="confirm-password" class="block text-sm font-medium text-gray-700 mb-2">
                            Confirm Password
                        </label>
                        <input type="password" id="confirm-password" name="confirm-password" required
                                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-red-400 focus:border-red-400 transition-colors"
                                placeholder="Confirm your password" />
                    </div>

                    <div>
                        <label for="usertype" class="block text-sm font-medium text-gray-700 mb-2">
                            User Type
                        </label>
                        <select id="usertype" name="usertype" required
                                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-red-400 focus:border-red-400 transition-colors">
                            <option value="">Select User Type</option>
                            <option value="guest" <%= oldInput.usertype === 'guest' ? 'selected' : '' %> >Guest</option>
                            <option value="host" <%= oldInput.usertype === 'host' ? 'selected' : '' %> >Host</option>
                        </select>
                    </div>

                    <div class="flex items-center">
                        <input id="terms" name="terms" type="checkbox" required
                                class="rounded mr-2 text-red-400 focus:ring-red-400">
                        <label for="terms" class="text-gray-700">
                            I agree to the <a href="#" class="text-red-400 hover:underline">terms and conditions</a>.
                        </label>
                    </div>

                    <div>
                        <input type="submit" value="Signup"
                                class="w-full bg-red-400 text-white py-2 rounded-md hover:bg-red-500 transition-colors" />
                    </div>

                    <div>
                        <p class="text-center text-gray-600">
                            Already have an account?
                            <a href="/login" class="text-red-400 hover:underline">
                                Login
                            </a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </main>
</body>