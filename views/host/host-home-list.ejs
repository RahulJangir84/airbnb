    <%- include('../partials/nav') %>
    <main class="container mx-auto px-4 py-8">
        
        <div class="bg-white rounded-lg shadow-xl p-6 my-7">
            <h1 class="text-xl font-bold text-center text-red-400 mb-4 pb-6">Hey host! Here are your registered homes</h1>
        
               
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% registeredHome.forEach(home =>{ %>
                <div class="bg-white rounded-lg shadow-md hover:shadow-xl transition-all duration-300">
                    <!--Image section-->
                    <div class="relative h-48 overflow-hidden rounded-t-lg">
                        <% if (home.photoUrl) { %>
                            <img src="<%= home.photoUrl %>" alt="<%= home.houseName %>" class="w-full h-full object-cover">
                        <% } else { %>
                            <div class="w-full h-full bg-gray-200 flex items-center justify-center">
                                <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M3 9l9-7 9 7v11a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"/>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 22V12h6v10"/>
                                </svg>
                            </div>
                        <% } %>
                        <!-- Price Badge -->
                        <div class="absolute top-4 right-4 bg-red-400 text-white px-3 py-1 rounded-full font-semibold shadow-lg">
                            $<%= home.pricePerNight %>/night
                        </div>
                    </div>

                    <!-- Content Section -->
                    <div class="p-5">
                        <!-- Title and Rating Row -->
                        <div class="flex justify-between items-start mb-3">
                            <h2 class="text-xl font-semibold text-gray-800 flex-grow"><%= home.houseName %></h2>
                            <div class="flex items-center bg-yellow-50 px-2 py-1 rounded-lg">
                                <span class="text-yellow-400 mr-1">â˜…</span>
                                <span class="text-gray-700 font-medium"><%= home.rating %></span>
                            </div>
                        </div>

                        <!-- Location -->
                        <div class="flex items-center text-gray-600 mb-4">
                            <svg class="w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                            </svg>
                            <p class="text-sm"><%= home.location %></p>
                        </div>

                        <!-- Description -->
                        <div class="mb-4">
                            <p class="text-gray-600 text-sm line-clamp-2"><%= home.description %></p>
                        </div>
                        
                        
                        <div>
                            <a href="/host/edithome/<%= home._id %>?edit=true" class="bg-blue-500 text-white px-5 py-2 mr-3 rounded-md hover:bg-blue-600 transition-colors">
                                Edit
                            </a>
                            <a href="/host/deletehome/<%= home._id %>" class="bg-red-500 text-white px-4 py-2 rounded-md hover:bg-red-600 transition-colors">
                                Delete
                            </a>
                        </div>
                       
                    </div>
                </div>
            <%  }); %>
        </div>
    </div>
    </main>
</body>
</html>