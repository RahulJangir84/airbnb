<%- include('../partials/head') %>
</head>
<body>
    <%- include('../partials/nav') %>
    <main class="container mx-auto px-4 py-8">
        <div class="max-w-3xl mx-auto">
            <!-- Breadcrumb Navigation -->
            <div class="mb-6 flex items-center text-sm text-gray-500">
                <a href="/homes" class="hover:text-red-500">Homes ></a>
                <span class="mx-2"></span>
                <span class="text-gray-700 font-medium"><%= home.houseName %></span>
            </div>

            <!-- Main Content Card -->
            <div class="bg-white rounded-xl shadow-lg overflow-hidden">
                <!-- Image Section -->
                <div class="relative h-96 overflow-hidden">
                    <% if (home.photoUrl) { %>
                        <img src="<%= home.photoUrl %>" alt="<%= home.houseName %>" class="w-full h-full object-cover">
                    <% } else { %>
                        <div class="w-full h-full bg-gray-200 flex items-center justify-center">
                            <svg class="w-24 h-24 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M3 9l9-7 9 7v11a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"/>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 22V12h6v10"/>
                            </svg>
                        </div>
                    <% } %>
                    
                    
                    <div class="absolute top-4 right-4 bg-yellow-400 text-white px-3 py-1 rounded-full font-semibold shadow-lg flex items-center">
                        <span class="mr-1">â˜…</span>
                        <span><%= home.rating %>/5</span>
                    </div>

                    
                    <div class="absolute bottom-4 right-4 bg-red-500 text-white px-4 py-2 rounded-lg font-semibold shadow-lg text-lg">
                        <span><%= home.pricePerNight %>  </span>
                        <span class="text-sm font-normal">per night</span>
                    </div>
                </div>

                <!-- Content Section -->
                <div class="p-8">
                    <div class="flex flex-col md:flex-row md:justify-between md:items-start gap-6">
                        <!-- Left Column: Details -->
                        <div class="flex-1">
                            <!-- Title -->
                            <h1 class="text-3xl font-bold text-gray-800 mb-3"><%= home.houseName %></h1>
                            
                            <!-- Location -->
                            <div class="flex items-center text-gray-600 mb-6">
                                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                                </svg>
                                <p class="text-lg"><%= home.location %></p>
                            </div>
                            
                            <!-- Divider -->
                            <div class="border-t border-gray-200 my-6"></div>
                            
                            <!-- Description Section -->
                            <div class="mb-8">
                                <h2 class="text-xl font-semibold text-gray-800 mb-4">Description</h2>
                                <p class="text-gray-600 leading-relaxed">
                                    <%= home.description || "No description provided for this property." %>
                                </p>
                            </div>
                            
                            <!-- Features Section -->
                            <div>
                                <h2 class="text-xl font-semibold text-gray-800 mb-4">Property Highlights</h2>
                                <ul class="grid grid-cols-2 gap-3">
                                    <li class="flex items-center text-gray-600">
                                        <svg class="w-5 h-5 mr-2 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                        </svg>
                                        <span>Free WiFi</span>
                                    </li>
                                    <li class="flex items-center text-gray-600">
                                        <svg class="w-5 h-5 mr-2 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                        </svg>
                                        <span>Air Conditioning</span>
                                    </li>
                                    <li class="flex items-center text-gray-600">
                                        <svg class="w-5 h-5 mr-2 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                        </svg>
                                        <span>Parking</span>
                                    </li>
                                    <li class="flex items-center text-gray-600">
                                        <svg class="w-5 h-5 mr-2 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                        </svg>
                                        <span>Kitchen</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        
